{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "isolatedModules": true,
    "strict": true,
    "verbatimModuleSyntax": true,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "skipLibCheck": true,
    "noCheck": true,
    "declarationDir": "build",
    "noEmitOnError": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "sourceMap": false,
  },
  "include": [
    "src/*.ts"
  ]
}